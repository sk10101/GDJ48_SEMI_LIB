<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdj.lib.dao.BoardDAO">

	<select id="noticeList" resultType="com.gdj.lib.dto.BoardDTO" >
		SELECT notice_id, notice_title, notice_date FROM notice
		ORDER BY notice_id ASC
	</select>
	
	<delete id="noticeDelete" parameterType="String">
		DELETE FROM notice WHERE notice_id = #{notice_id}
	</delete>
	
	<insert id="noticeWrite" 
	useGeneratedKeys="true"
	keyColumn="notice_id"
	keyProperty="notice_id"
	parameterType="hashmap">
		INSERT INTO notice(mb_id,notice_title,notice_content)
	VALUES(#{mb_id},#{notice_title},#{notice_content})
	</insert>
	
	<select id="noticeDetail" parameterType="String" resultType="com.gdj.lib.dto.BoardDTO">
		SELECT * FROM notice WHERE notice_id = #{notice_id}
	</select>
	
</mapper>