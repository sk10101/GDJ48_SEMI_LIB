			ORDER BY b_id DESC limit #{param1} offset #{param2}
	</select>
	
	<select id="allCount" resultType="Integer">
		SELECT COUNT(b_id) FROM book;
	</select>
	<!-- 도서 목록 페이징 끝-->	
	
	<select id="detail" resultType="com.gdj.lib.dto.BookDTO">
